{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LinkFlow",
  "version": "0.1.0",
  "identifier": "com.linkflow.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LinkFlow",
        "width": 1200,
        "height": 760,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  },
  "plugins": {
    "shell": {
      "open": "^(https?:\\/\\/|mailto:|tel:|[a-zA-Z][a-zA-Z\\d+.-]*:\\/\\/).+"
    }
  }
}
